{
  "name": "root",
  "private": true,
  "version": "1.0.0",
  "author": "XeryYue",
  "main": "index.js",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "workspaces": [
    "packages/*",
    "internal"
  ],
  "license": "MIT",
  "engines": {
    "node": "^16"
  },
  "scripts": {
    "compile": "lerna exec --scope @fect-ui/vue -- yarn build",
    "collect": "lerna exec --scope @fect-ui/vue -- yarn collect",
    "dev:site": "lerna exec --scope @fect-ui/website -- yarn dev",
    "build:site": "lerna exec --scope @fect-ui/website -- yarn prod",
    "build:hook": "lerna exec --scope @fect-ui/vue-hooks -- yarn build",
    "build:icon": "lerna exec --scope @fect-ui/vue-icons -- yarn build",
    "test": "cd packages/vue &&  yarn test",
    "clean": "lerna clean --yes",
    "lint": "eslint \"{internal,packages}/**/*.{js,ts,tsx}\""
  },
  "devDependencies": {
    "@types/node": "^16.10.5",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vitejs/plugin-vue": "^2.2.4",
    "@vitejs/plugin-vue-jsx": "^1.3.8",
    "@vue/test-utils": "^2.0.0-rc.16",
    "autoprefixer": "^10.4.2",
    "es-module-lexer": "^0.9.3",
    "eslint": "^8.0.0",
    "eslint-config-kagura": "^1.0.3",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-vue": "^7.19.1",
    "internal": "0.0.0",
    "jest": "^27.5.1",
    "jest-serializer-vue": "^2.0.2",
    "jest-transform-stub": "^2.0.0",
    "lerna": "^4.0.0",
    "no-bump": "^0.2.0",
    "prettier": "^2.4.1",
    "ts-node": "^10.8.1",
    "typescript": "^4.6.3",
    "vite": "^2.8.6",
    "vue": "^3.2.31",
    "vue-jest": "^5.0.0-alpha.10",
    "clean-css": "^5.2.4",
    "@types/fs-extra": "^9.0.13",
    "postcss": "^8.4.5",
    "less": "^4.1.2",
    "fs-extra": "^10.0.0",
    "rollup-plugin-postcss": "^4.0.2",
    "@types/clean-css": "^4.2.5"
  },
