{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "allowJs": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "target": "esnext",
    "module": "esnext",
    "types": ["vite/client"]
  },
  "include": ["docs/layout/**/*", "typings", "exmaple"],
  "exclude": ["node_modules"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "esModuleInterop": true
    }
  }
}
